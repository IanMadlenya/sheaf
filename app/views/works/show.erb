<h1><em><%= @work.title %></em> by <%= @work.author %></h1>


<!-- book metadata -->

<h2>Copies</h2>
<table>
  <tr>
    <th>Owner</th>
    <th>Publisher</th>
    <th>Publication Year</th>
    <th>ISBN</th>
    <th>Borrow</th>
  </tr>
  <!-- for each copy of the book -->
  <% @copies.each do |copy| %>
  <!-- create a new table row -->
  <tr>
    <!-- Owner -->
    <td><%= copy.user.name %></td>
    <!-- Publisher -->
    <td><%= copy.publication.publisher %></td>
    <!-- Publication year -->
    <td><%= copy.publication.publication_year %></td>
    <!-- ISBN -->
    <td><%= copy.publication.isbn13 %></td>
    <!-- Borrowing status -->
    <% if copy.user.id != @current_user.id %>
    <td>
    <!-- <form method="GET" action="/owns/#{copy.id}>/borrows/new"> -->
      <button type="submit">Borrow</button></form>
    </td>
    <% else %>
    <td>
      -
    </td>
    <% end %>
  </tr>
  <% end %>

</table>

