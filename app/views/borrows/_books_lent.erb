<div id="books-lent">
<h2>Books Lent</h2>
<table>
  <tr>
    <th>Borrower</th>
    <th>Title</th>
    <th>Author</th>
    <th>Publisher</th>
  </tr>
  <% lent_books.each do |book| %>
  <tr>
    <!-- really ugly associations to be cleaned up later -->
    <td><%= book.user.name %></td>
    <td><%= book.own.publication.work.title %></td>
    <td><%= book.own.publication.work.author %></td>
    <td><%= book.own.publication.publisher %></td>
  </tr>
  <% end %>
</table>
</div>